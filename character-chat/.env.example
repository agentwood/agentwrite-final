# Required API Keys

# Gemini API (for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# Fish Audio API (for voice synthesis)
FISH_SPEECH_API_KEY=your_fish_speech_api_key_here
FISH_AUDIO_API_KEY=your_fish_audio_api_key_here
USE_FISH_SPEECH=true

# ElevenLabs API (for voice synthesis alternative)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Pocket TTS (Primary - DigitalOcean)
POCKET_TTS_URL=http://your-pocket-tts-server:8000

# Stripe Configuration (REQUIRED for pricing page buttons to work)
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Price IDs (create products in Stripe Dashboard first)
# Free tier - no price ID needed
# Agentwood+ Monthly ($14.99/month)
STRIPE_PRICE_PLUS_MONTHLY=price_your_plus_monthly_price_id_here
# Agentwood+ Annual ($149/year - save 17%)
STRIPE_PRICE_PLUS_ANNUAL=price_your_plus_annual_price_id_here
# Pro Monthly ($49.99/month)
STRIPE_PRICE_PRO_MONTHLY=price_your_pro_monthly_price_id_here
# Pro Annual ($499/year - save 17%)
STRIPE_PRICE_PRO_ANNUAL=price_your_pro_annual_price_id_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# NextAuth Configuration (REQUIRED for production)
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_32_char_random_secret_here
# Set to your production URL (no trailing slash)
NEXTAUTH_URL=https://agentwood.xyz

# App Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
DATABASE_URL="file:./dev.db"


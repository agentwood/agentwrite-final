{
    "name": "Voice Audit Workflow",
    "description": "Runs voice audit every 3 days and sends Slack/email notification",
    "version": 1,
    "nodes": [
        {
            "name": "Schedule Trigger",
            "type": "n8n-nodes-base.scheduleTrigger",
            "position": [
                250,
                300
            ],
            "parameters": {
                "rule": {
                    "interval": [
                        {
                            "field": "days",
                            "daysInterval": 3
                        }
                    ]
                }
            }
        },
        {
            "name": "Run Voice Audit",
            "type": "n8n-nodes-base.executeCommand",
            "position": [
                450,
                300
            ],
            "parameters": {
                "command": "cd /path/to/character-chat && npx tsx scripts/voice-audit.ts",
                "timeout": 300
            }
        },
        {
            "name": "Parse Results",
            "type": "n8n-nodes-base.set",
            "position": [
                650,
                300
            ],
            "parameters": {
                "values": {
                    "string": [
                        {
                            "name": "status",
                            "value": "={{ $json.exitCode === 0 ? 'success' : 'warning' }}"
                        },
                        {
                            "name": "output",
                            "value": "={{ $json.stdout }}"
                        }
                    ]
                }
            }
        },
        {
            "name": "Notify Slack",
            "type": "n8n-nodes-base.slack",
            "position": [
                850,
                200
            ],
            "parameters": {
                "channel": "#agentwood-alerts",
                "text": "ðŸŽ¤ Voice Audit Report\n\nStatus: {{ $json.status }}\n\n{{ $json.output }}"
            }
        },
        {
            "name": "Send Email on Issues",
            "type": "n8n-nodes-base.emailSend",
            "position": [
                850,
                400
            ],
            "parameters": {
                "fromEmail": "alerts@agentwood.xyz",
                "toEmail": "admin@agentwood.xyz",
                "subject": "Agentwood Voice Audit - {{ $json.status }}",
                "text": "Voice Audit completed:\n\n{{ $json.output }}"
            }
        }
    ],
    "connections": {
        "Schedule Trigger": {
            "main": [
                [
                    {
                        "node": "Run Voice Audit",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Run Voice Audit": {
            "main": [
                [
                    {
                        "node": "Parse Results",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Parse Results": {
            "main": [
                [
                    {
                        "node": "Notify Slack",
                        "type": "main",
                        "index": 0
                    },
                    {
                        "node": "Send Email on Issues",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        }
    },
    "settings": {
        "executionOrder": "v1",
        "saveManualExecutions": true
    }
}